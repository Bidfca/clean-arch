{
  "compilerOptions": {
    "target": "es2021",
    "rootDir": "src",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "baseUrl": "src",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["*"],
      "@/test/*": ["../test/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["src", "tests"]
}
